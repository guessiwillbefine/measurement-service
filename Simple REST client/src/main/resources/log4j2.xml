<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="file" fileName="logs/logfile.log" append="false" ignoreExceptions="true">
            <PatternLayout>
                <Pattern>%d{dd MMM yyyy HH:mm:ss,SSS}{GMT+3}  [ %p ] [ METHOD ]: %c{10}.%M [ Text : %msg ]%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ABSOLUTE}{GMT+3}  %highlight{[%-20.-45maxLen{%-5level %logger{1}.%method()}{}]}{trace=bright cyan} %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="file" level="WARN"/>
            <AppenderRef ref="STDOUT" level="INFO"/>
        </Root>
    </Loggers>
</Configuration>